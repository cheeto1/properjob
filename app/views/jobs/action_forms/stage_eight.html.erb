<div class="container">
  <form action="<%= job_payments_path(@job) %>" method="post" id="payment-form">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="form-check my-3">
      <input class="form-check-input" id="agree_to_job" type="checkbox" name="agree_to_job" value="true">
      <label class="form-check-label" for="agree_to_job">I agree that the job is completed</label>

    </div>
    <div id="card-element">
      <!-- A Stripe Element will be inserted here. -->
    </div>
    <!-- Used to display Element errors. -->
    <div id="card-errors" role="alert"></div>
    <input class="mt-3 btn btn-primary w-100" type="submit" value="Pay Â£<%= @job.final_price %>.00 now">
  </form>
</div>
