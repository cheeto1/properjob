<%= render('shared/wrapper', title: "Who would you like to quote for this job?", illustration_url:  cl_image_tag('choose_contractor_yuyj3c'))%>


<div class="container py-5">
<h1 class="mb-4">Select Contractors:</h1>

<form action="<%= job_quotes_path(@job) %>" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :contractor_selected, value="," %>
    <% @contractors.each do |contractor| %>
      <div class="card my-3 shadow-sm rounded contractor-card" data-id="<%=contractor.id%>">
        <div class="card-body">
          <h4 class="card-title"><%= contractor.first_name %></h4>
          <p class="card-text"><%= contractor.contractor_type.capitalize %></p>
        </div>
      </div>
    <% end %>
</div>
<div class="sticky-btn">
  <input type="submit" value="Submit" class="btn btn-primary">
</div>
</form>

