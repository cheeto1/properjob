<div class="container">
<h1 class="my-3 pt-3">Feedback</h1>
<form action="<%= job_path(@job) %>" method="post">
 <input type="hidden" name="_method" value="patch">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :resolved, value="" %>
  <%= hidden_field_tag :rating, value="0" %>
  <h3>Has the issue been resolved?</h3>
    <div class="row d-flex justify-content-between pr-2 px-3">
      <div class="card my-3 shadow-sm rounded job-card col-sm justify-content-center" data-id="<%=true%>">
        <div class="card-body">
          <p>Issue resolved</p>
        </div>
      </div>
      <div class="card my-3 shadow-sm rounded job-card col-sm" data-id="<%=false%>">
        <div class="card-body">
          <p>Issue not resolved</p>
        </div>
      </div>
    </div>
  <div class="m-3">
    <h3>How would you rate <%= @job.contractor.first_name %>'s work?</h3>
  </div>
  <div class="rating"></div>
</div>
  <div class="sticky-btn">
   <input type="submit" value="Submit" class="btn btn-primary">
  </div>
</form>


