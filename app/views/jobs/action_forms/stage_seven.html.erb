<form action="<%= job_path(@job) %>" method="post">
 <input type="hidden" name="_method" value="patch">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :resolved, value="" %>
  <%= hidden_field_tag :rating, value="0" %>
  <div class="container">
    <div class="card my-3 shadow-sm rounded job-card" data-id="<%=true%>">
      <div class="card-body">
        <p>Issue resolved</p>
      </div>
    </div>
    <div class="card my-3 shadow-sm rounded job-card" data-id="<%=false%>">
      <div class="card-body">
        <p>Issue not resolved</p>
      </div>
    </div>
  </div>
  <div class="m-3">
    <h3>How would you rate <%= @job.contractor.first_name %>'s work?</h3>
  </div>
  <div class="rating"></div>
  <div class="w-100 sticky-btn">
   <input type="submit" value="Submit" class="btn btn-primary w-100">
  </div>
</form>


