<%= render('shared/wrapper', title: "Pick the best contractor for the job", illustration_url:  cl_image_tag('select_contractors_eihz0p'))%>

<div class="container py-5">
  <h1 class="mb-4">Select A Quote:</h1>
  <form action="<%= job_path(@job) %>" method="post">
   <input type="hidden" name="_method" value="patch">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :quote_selected, value="" %>
      <% @job.quotes.each_with_index do |quote, index|  %>
        <div class="my-3 shadow-sm rounded quote-card" data-id="<%=quote.id%>">
          <div class="card-body">
            <h4 class="card-title"><%= quote.contractor.first_name %></h4>
            <p class="card-text"><strong><%= quote.contractor.contractor_type.capitalize %></p>
            <p class="card-text">Â£<%= quote.price %></p>
            <!-- <p>URL GOES HERE</p> -->
          </div>
        </div>
      <% end %>
    </div>
    <div class="sticky-btn">
     <input type="submit" value="Submit" class="btn btn-primary">
    </div>
</form>


