<%= render('shared/navbar') %>

<div class="bg-primary text-white d-flex align-items-center justify-content-start">
  <div class="container pt-5 pb-2">
    <h2 class="">Hi <%= current_user.first_name %>.</h2>
    <% case current_user.user_type %>
    <% when 'tenant' %>
      <p>Here are your previously submitted jobs</p>
    <% when 'landlord' %>
      <p>Here are all jobs submitted at <%= current_user.owned_properties.first.address %>:</p>
    <% when 'contractor' %>
      <p>Here are the jobs you've been involved in:</p>
    <% end %>
  </div>
</div>

<div class="container pt-4 pb-5">
  <% if @jobs.empty? %>
    <h3>Looks like you haven't submitted any jobs yet!</h3>
    <p>Click below to add a new one...</p>
  <% else %>
    <% @jobs.each do |job| %>
      <%= link_to job_path(job), class: 'text-dark text-decoration-none' do %>
        <div class="index-card">
          <h4 class="mb-4">Job #<%= job.id %></h4>
          <p class=""><%= job.description %></p>
          <p><i class="fas fa-tools text-danger mr-2"></i> <%= job.category.capitalize %></p>
          <span class="job-show-stage"><i class="fas fa-clock mr-2"></i><%= job.stage_attributes[:stage_name] %></span>
          <p class="text-right mt-4 mb-0 timestamp">Submitted <%= time_ago_in_words(job.created_at) %> ago.</p>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>

<% if current_user.user_type == 'tenant' %>
  <div class="sticky-btn">
    <%= link_to "Submit new job", new_job_path, class: "btn btn-primary" %>
  </div>
<% end %>

