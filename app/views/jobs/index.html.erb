<%= render('shared/navbar') %>
<div class="bg-primary text-white d-flex align-items-center justify-content-start shadow">
  <div class="container pt-5 pb-4">
    <h2 class="m-0">Hi <%= current_user.first_name %></h2>
    <p>Here are your previously submitted jobs:</p>
  </div>
</div>
<div class="container pt-3 pb-5">
  <% @jobs.each do |job| %>
    <%= link_to job_path(job), class: "text-decoration-none" do %>
      <div class="card my-3 shadow-sm rounded">
        <div class="card-body">
          <h4 class="card-title"><strong>Category:</strong> <%= job.category %></h4>
          <p class="card-text"><strong>Description:</strong> <%= job.description %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div class="sticky-btn">
  <%= link_to "Submit new job", new_job_path, class: "btn btn-primary" %>
</div>
