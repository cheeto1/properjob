<h1 class="text-center">Submit a new job</h1>

<div class="container">
  <%= simple_form_for (@job) do |f| %>
    <%= f.input :category %>
    <%= f.input :description %>

    <div class="container">
      <%= f.submit "Submit Job", class: "btn btn-primary w-100 sticky-btn" %>
    </div>
  <% end %>
</div>
